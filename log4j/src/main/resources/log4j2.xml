    <!--然后定义logger，只有定义了logger并引入的appender，appender才会生效-->
    <Loggers>
        <!--过滤掉spring的一些无用的DEBUG信息-->
        <logger name="org.springframework" level="INFO"></logger>
        <Root level="Debug">
            <AppenderRef ref="Infowu"/>
            <AppenderRef ref="Debugwu"/>
            <AppenderRef ref="Errorwu"/>

            <AppenderRef ref="Infosi"/>
            <AppenderRef ref="Debugsi"/>
            <AppenderRef ref="Errorsi"/>

            <AppenderRef ref="Infosan"/>
            <AppenderRef ref="Debugsan" />
            <AppenderRef ref="Errorsan"/>

            <AppenderRef ref="Console"/><!--输出到控制台-->
            <AppenderRef ref="Infotwo"/>
            <AppenderRef ref="Errortwo" />
            <AppenderRef ref="Debugtwo"/>

            <AppenderRef ref="Infoone"/>
            <AppenderRef ref="Debugone"/>
            <AppenderRef ref="Errorone"/>

        </Root>
    </Loggers>

</Configuration>
